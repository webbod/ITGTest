@{
    // This view scaffolds the news feed page
    // articles are loaded dynamically by the client
    
    // the text strings could be moved into a constants file, but that feels like overkill
    
    ViewBag.Title = "News Feed Demo";
}

<section class="container">
    <header>
        <h1>News Feed</h1>
    </header>
    <section id="articleContainer"></section>
    <footer>
        <button id="loadMore" class="hidden">Load More</button>
        <div id="loading">[ loading ]</div>
        <div id="allArticlesLoaded" class="hidden">[ end of feed ]</div>
    </footer>
</section>

@section scripts {
    <script src="~/Scripts/app.js"></script>
}