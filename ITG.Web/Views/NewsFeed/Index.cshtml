@{
    // This view scaffolds the news feed page
    // articles are loaded dynamically by the client
    
    // the text strings could be moved into a constants file, but that feels like overkill
    
    ViewBag.Title = "News Feed Demo";
}

<section class="container">
    <header role="banner">
        <h1>News Feed</h1>
    </header>
    <section id="articleContainer"></section>
    <footer role="feed">
        <button id="loadMore" class="hidden" accesskey="l" role="button">Load More</button>
        <div role="alert">
            <span id="loading">[ loading ]</span>
            <span id="allArticlesLoaded" class="hidden">[ end of feed ]</span>
        </div>
    </footer>
</section>

@section scripts {
    <script src="~/Scripts/app.js"></script>
}